{
  "name": "vue-3-boilerplate",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:expose": "vite --port 8080 --host",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test": "vitest run --environment jsdom --root src/",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:e2e": "start-server-and-test preview :4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' :4173 'cypress open --e2e'",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "release": "release-it",
    "release:minor": "release-it minor"
  },
  "dependencies": {
    "@100mslive/hms-video-store": "^0.8.1",
    "@learnapp-co/lib-ws-web": "^0.1.3",
    "@sohailalam2/abu": "^0.6.0",
    "@vueuse/core": "^9.10.0",
    "broadcast-channel": "^4.20.1",
    "dexie": "^3.2.2",
    "lottie-web": "^5.10.2",
    "pinia": "^2.0.28",
    "store2": "^2.14.2",
    "v-lazy-image": "^2.1.1",
    "vue": "^3.2.45",
    "vue-recaptcha": "^2.0.3",
    "vue-router": "^4.1.6",
    "workbox-webpack-plugin": "^6.5.4",
    "zod": "^3.20.2",
    "zod-validation-error": "^0.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "cypress": "^12.0.2",
    "eslint": "^8.22.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.3.0",
    "happy-dom": "^8.1.1",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.7.1",
    "release-it": "^15.6.0",
    "sass": "^1.57.1",
    "start-server-and-test": "^1.15.2",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vite-plugin-stylelint": "^4.1.4",
    "vitest": "^0.25.6",
    "vue-tsc": "^1.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit \"$1\"",
      "pre-commit": "npm run lint && npm run test",
      "pre-push": "npm run lint && npm run test && npm run build"
    }
  }
}
